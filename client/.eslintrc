{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": [
      "warn",
      "as-needed"
    ],
    "class-methods-use-this": "warn",
    "comma-dangle": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [
      "error", 100,
      {
        "ignoreComments": true
      }
    ],
    "no-console": [
      "off"
    ],
    "no-useless-escape": "warn",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "no-new": "off",
    "semi": [
      "error",
      "always"
    ],
    "strict": [
      "off"
    ],
    "no-case-declarations": [
      "off"
    ]
  },
  "globals": {
    "afterEach": false,
    "beforeEach": false,
    "describe": false,
    "it": false,
    "JSON": false,
    "OpenSeadragon": true,
    "xdescribe": false,
    "xit": false
  }
}
